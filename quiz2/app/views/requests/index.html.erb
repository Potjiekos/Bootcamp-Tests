
<div class="header">
  <h3>All Support Requests</h3>
</div>

<table border='2px' width='80%'>

  <tr>
    <th> Name </th>
    <th> Email </th>
    <th> Department </th>
    <th> Message </th>
    <th colspan="3"> Actions </th>
  </tr>

  <% @request.each do |r|  %>

  <tr>
    <td><%= r.name %></td>
    <td><%= r.email %></td>
    <td><%= r.department %></td>
    <td><%= r.message %></td>

    <td><%= link_to "Edit", edit_request_path(request) %></td>
    <td><%= link_to "Delete", request_path(request), method: :delete, data: {confirm: "Are you sure you want to delete this request?"}%></td>

    <td>
      <input type="button" name="incomplete" value="incomplete" onclick="return change(this);">
        <script type="text/javascript">
            function change(click){
              if (click.value === "incomplete")
              click.value = "complete";
              else
              click.value = "incomplete";
             } 
        </script>
    </td>
  </tr>
  <% end %>
</table>

<div class="paginate">
  <%= paginate @request %>
</div>
