
<div class="error_messages">
  <% if @idea.errors.any? %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
</div>

<br>

<%= form_for @idea do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div><br>

<%= f.submit %>

<% end %>
