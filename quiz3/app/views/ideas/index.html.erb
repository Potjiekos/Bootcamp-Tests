<h4><span class="page_header">All Ideas</span></h4>
<span><%= notice || alert %></span>
<hr>


<% @ideas.each do |idea| %>
  <div>
    | <%= link_to idea.title, idea_path(idea) %> | Created by <%= idea.user_full_name %>
    | Likes: ( <%= idea.likes.count %> ) |

    <% join = idea.join_for(current_user) %>
    <% if join %>
      <%= link_to "Joined", idea_join_path(idea, join), method: :delete  %>
    <% else %>
      <%= link_to "Join", idea_joins_path(idea), method: :post %>
    <% end %> |

    <% like = idea.like_for(current_user) %>
    <% if like %>
      <%= link_to "Unlike", idea_like_path(idea, like), method: :delete  %>
    <% else %>
      <%= link_to "Like", idea_likes_path(idea), method: :post %>
    <% end %> |

    <hr>
  </div>
<% end %>
