<h4><span class="page_header">Create an Account</span></h4><hr>

<div class="error_messages">
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
</div>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div><br>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div><br>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div><br>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div><br>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div><br>

    <%= f.submit "Create an Account" %>

<% end %>
